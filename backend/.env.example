# Application
APP_NAME=Reception Voice Agent API
DEBUG=false
DEEPGRAM_API_KEY= 'your_deepgram_api_key_here'
# Database (PostgreSQL + pgvector)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/reception_agent

# Groq API
GROQ_API_KEY=your_groq_api_key_here

# Security
SECRET_KEY=your-very-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Voice Settings
SAMPLE_RATE=16000
CHANNELS=1
VOICE_TIMEOUT=30
MAX_AUDIO_DURATION=600

# LLM Settings
MAX_RESPONSE_LENGTH=500
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9

# RAG Settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=100
RAG_TOP_K=3

# Cache
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
